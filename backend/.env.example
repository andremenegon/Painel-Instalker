# Configurações do Backend API

# Porta do servidor
PORT=3001

# Ambiente (development, production)
NODE_ENV=development

# URL do frontend (para CORS)
FRONTEND_URL=http://localhost:5173

# Configurações do Banco de Dados
# Escolha: mysql ou postgresql
DB_TYPE=mysql

# MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=instalker
DB_USER=root
DB_PASSWORD=sua_senha_aqui
DB_SSL=false

# PostgreSQL (se usar postgresql)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=instalker
# DB_USER=postgres
# DB_PASSWORD=sua_senha_aqui
# DB_SSL=false

# JWT Secret (MUDE ISSO para uma chave segura!)
JWT_SECRET=seu-secret-super-seguro-mude-isso-em-producao-123456789
